@page "/foundContact"
@using BlazorApp2.Shared;
@inject HttpClient Http
@inject NavigationManager Navigation

<PageTitle>Buscar Contacto</PageTitle>

<h1>Buscar Contacto</h1>

<p>Ingresa el nombre del contacto a buscar</p>

<div class="form-floating mb-3" style="height: 45px; width: 220px;">
    <input class="form-control" placeholder="Leave a name here" id="floatingTextName" required >
    <label for="floatingTextName">Nombre</label>
</div>

@if (_contacts == null )
{
    <p><em>Obteniendo los datos...</em></p>
}
else
{
    <table class="table table-stripede">
        <thead>
            <tr>
                <th>#</th>
                <th>Nombre </th>
                <th>Telef√≥no </th>
                <th>Celular </th>
            </tr>
        </thead>
</table>
}

@code
{
    private List<Contact> _contacts;
    protected override async Task OnInitializedAsync()
    {
        _contacts = await Http.GetFromJsonAsync<List<Contact>>($"https://localhost:7086/api/Contact");
    }
}